<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, id:"book_title", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, id:"book_body", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
       |
      <%= link_to "Back", books_path %>
      </div>
    </div>
</div>